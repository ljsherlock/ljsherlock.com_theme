{#
   _components/_atoms/icon/icon.twig
   Icon
   Create an icon using the svg component and simply add the 'icon' class so that
   css defines size, colour, etc.

   @bem {Array} ()
      {
         block {String}
         element {String}
         modifier {Array}
      }
   @param {String} icon
#}

{# Parameters #}
{% set iconBem = bem ?? null %}
{% set iconAttrs = attrs ?? null %}
{% set iconName = icon ?? null %}

{# Variables #}
{% set iconID = iconSName %}
{% set iconBemDefault = [{block: 'icon'}] %}
{% if iconBem is defined and iconBem is iterable %}
   {% set iconBem = iconBemDefault | merge( iconBem )  %}
{% else %}
   {% set iconBem = iconBemDefault %}
{% endif %}

{# Output #}
{% if iconID %}

   {% include '_atoms/svg/svg.twig' with { bem: iconBem, attrs: iconAttrs, icon: iconID } %}

{% endif %}
