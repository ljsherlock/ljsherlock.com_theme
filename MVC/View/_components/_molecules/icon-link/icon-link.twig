{#
   _components/_molecules/icon--link/icon--link.twig
   Icon Link
   An icon which is used as a link

   @param {Array} bem ()
      {
         block {String}
         element {String}
         modifier {Array}
      }
   @param {Array} attrs ()
      {
         Mixed
      }
   @param {String} icon
   @param {String} href
#}

{# Parameters #}
{% set iconLinkBem = bem ?? null %}
{% set iconLinkAttrs = attrs ?? null %}
{% set iconLinkID = icon ?? null %}


{# Variables #}
{% set iconSvgBemDefault =  [ {block: 'icon', modifier: ['link'] }, { block: "symbol", modifier: [iconLinkID] } ] %}
{% set iconSvgBem = (iconBem) ? iconBem|merge(iconSvgBemDefault) : iconSvgBemDefault %}

{# Output #}
{% if iconLinkID %}

   {% import 'macros.twig' as mcro %}

   {% set iconLinkInnerHTML %}
      {% include '_atoms/icon/icon.twig' with { icon : iconLinkID, bem: iconSvgBem } %}
   {% endset %}

   {{ mcro.createHTMLTag('a', iconLinkAttrs, iconLinkBem, iconLinkInnerHTML ) }}

{% endif %}
