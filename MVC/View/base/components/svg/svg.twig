{#
   base/components/svg/svg.twig
   SVG
   Create an SVG element

   @bem {Array} ()
      {
         block {String}
         element {String}
         modifier {Array}
      }
   @param {String} icon
#}

{# Parameters #}
{% set svgIcon = icon ?? null %}
{% set svgBem = bem ?? null %}

{# Variables #}
{% set svgHref = svgIcon ? function('get_template_directory_uri') ~ '/dist/icons/icons.svg#' ~ svgIcon : '' %}
{% set svgID = 'use--' ~ svgIcon %}

{# Output #}
{% import 'macros.twig' as mcro %}

{% set useHTML %}
   {{ mcro.createHTMLTag( 'use', { href: svgHref, id: svgID }, [], '', true ) }}
{% endset %}

{{ mcro.createHTMLTag( 'svg', {}, svgBem, useHTML ) }}
