{# base/components/header/header.twig #}

{#
   Menu
   From the menu object create a menu
   @param {Array} bem (optional)
      {
         block {String}
         element {String}
         modifier {Array}
      }
   @param {Array} attrs (optional)
   {
      Mixed
   }
   @param {Timber Menu Object}
#}

{# Parameters #}
{% set headerAttrs = attrs ?? null %}
{% set headerBem = bem ?? null %}
{% set menuItems = menu.items ?? null %}

{# Variables #}
{% set headerBem = [{ block: 'header' }] %}

{# Output #}
{% import 'macros.twig' as mcro %}

{% set innerHTML %}

   <div class="header__grid">
      {% include 'components/icon-link/icon-link.twig' with { icon: 'icon-logo', attrs: { href: constant('LJS_URL') }, bem : [{block: 'logo'}] } %}
      {% include 'components/hamburger/hamburger.twig' %}
      {% include ['components/menu/menu.twig', 'base/components/menu/menu.twig' ] with {
         menu: menuItems,
         bem: [{block: 'nav', modifier: ['primary'] } ]
      } %}
   </div>

{% endset %}

{{ mcro.createHTMLTag('header', {}, headerBem, innerHTML) }}
